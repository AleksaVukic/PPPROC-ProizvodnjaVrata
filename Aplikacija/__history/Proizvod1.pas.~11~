{$R *.fmx}

uses Prodaja;


procedure TfrmProizvod1.RoundRect12Click(Sender: TObject);
var
RGBColor1: TAlphaColor;
var
RGBColor2: TAlphaColor;

begin
RGBColor1 := $FF709B8C;
RGBColor2 := $FFE0E0E0;

if RoundRect12.Fill.Color <> RGBColor1 then
begin
RoundRect12.Fill.Color := RGBColor1;
end else
begin
RoundRect12.Fill.Color := RGBColor2;
end;
end;


procedure TfrmProizvod1.RoundRect13Click(Sender: TObject);
var
RGBColor1: TAlphaColor;
var
RGBColor2: TAlphaColor;

begin
RGBColor1 := $FF709B8C;
RGBColor2 := $FFE0E0E0;

if RoundRect13.Fill.Color <> RGBColor1 then
begin
RoundRect13.Fill.Color := RGBColor1;
end else
begin
RoundRect13.Fill.Color := RGBColor2;
end;
end;

procedure TfrmProizvod1.RoundRect1Click(Sender: TObject);
begin
frmProdaja.show;
self.hide;
end;

end.
